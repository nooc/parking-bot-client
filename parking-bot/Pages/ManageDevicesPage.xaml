<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ParkingBot.ViewModels"
             xmlns:p="clr-namespace:ParkingBot.Properties"
             x:Class="ParkingBot.Pages.ManageDevicesPage"
             x:DataType="vm:ManageDevicesPageVm"
             Title="{Static p:Lang.manage_dev}">
     
    <VerticalStackLayout HorizontalOptions="Fill">
        <Frame HorizontalOptions="Fill">
            <VerticalStackLayout HorizontalOptions="Fill">
                <Label Text="{Static p:Lang.reg_dev_list}" HorizontalOptions="Center" />
                <CollectionView x:Name="RegList" HorizontalOptions="Fill"
                                ItemsSource="{Binding RegisteredCars}">
                    
                </CollectionView>
               <Label Text="{Static p:Lang.pair_dev_list}" HorizontalOptions="Center" />
                <CollectionView x:Name="PairList" HorizontalOptions="Fill"
                                ItemsSource="{Binding PairedDevices}">
                    
                </CollectionView>
            </VerticalStackLayout>
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>